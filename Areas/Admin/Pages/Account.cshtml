@page
@model AccountModel
@{
    ViewData["Title"] = "Dashboard";
}
<div class="Dashboard">
    <sidebar id="sidebar">
        <div class="Avatar">
            <img src="~/img/Users/Bielec.jpg" />
        </div>
        <div class="Information">
            <span>@Model.UserName  @Model.UserSurname</span>
        </div>
        <nav class="Navigation">
            <ul>
                <li><a href="#">Konto</a></li>
                <li><a href="#">Dodaj użytkownika</a></li>
                <li><a href="#">Zarządzaj blogiem</a></li>
            </ul>
            <form class="Logout" 
                  asp-page="/Admin/Logout"
                  method="post">
                <button type="submit">Wyloguj się</button>
            </form>
        </nav>
    </sidebar>
    <main>
        <h1>Witaj @Model.UserName</h1>
        <hr />

        <form method="post">
            <div asp-validation-summary="All" class="Danger"></div>
            Imię: <input asp-for="Input.NewName" />
            Nazwisko: <input asp-for="Input.NewSurname" />
            Data urodzenia: <input asp-for="Input.NewBirthDate" />
            <button type="submit">Aktualizuj!</button>
        </form>
    </main>
</div>
