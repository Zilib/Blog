@page
@model AccountModel
@{
    ViewData["Title"] = "Konto";
}
<div class="Account">
    <partial name="~/Areas/Admin/Pages/_Sidebar.cshtml" />
    <main>
        <h1>Witaj @Model.UserName</h1>
        <hr />
        <h2>Edytuj swoje dane</h2>
        <form method="post">
            <div asp-validation-summary="All" class="Danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewName"></label> 
                <input asp-for="Input.NewName" />
            </div>
            <div class="form-group">
                <label asp-for="Input.NewSurname"></label> 
                <input asp-for="Input.NewSurname" />
            </div>
            <div class="form-group">
                <label asp-for="Input.NewBirthDate"></label>
                <input asp-for="Input.NewBirthDate" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Aktualizuj!</button>
            </div>
        </form>
    </main>
</div>
